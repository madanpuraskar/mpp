<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vie_splashscreen"
        android:src="@drawable/mpp"
        android:layout_marginTop="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_splashscreen"
        android:text="मदन पुर्स्कर पुस्तकालय"
        android:textColor="#e81919"
        android:textSize="20dp"
        android:layout_below="@+id/vie_splashscreen"
        android:layout_alignRight="@+id/vie_splashscreen"
        android:layout_alignEnd="@+id/vie_splashscreen"
        android:layout_marginTop="24dp" />

</RelativeLayout>